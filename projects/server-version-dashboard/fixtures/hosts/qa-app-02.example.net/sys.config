%% Example application config (Erlang-style)
[

  {app_core, [
    {log_level, info},
    {env, "qa"},
    {feature_flags, [safe_mode, audit_log]},
    %% proxy.beta
    {endpoints, [
      {primary, "https://api.qa.example.net"},
      {secondary, "https://api-backup.qa.example.net"}
    ]},

    %% Port is inside external_access_additional_fields (what the script parses)
    {external_access_additional_fields, [
      {proto, tcp},
      {port, 5071},
      {tls, false}
    ]}
  ]},

  {app_net, [
    {dns_timeout_ms, 1500},
    {connect_timeout_ms, 2000},
    {retry, {linear, 3, 500}}
  ]}
].
